<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded,RtlSymmetry"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:elevation="@dimen/elevation_card"
    >


    <TextView
        android:id="@+id/tv_historyitem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        tools:text="Barcode - Contact"
        />
    <TextView
        android:id="@+id/tv_historyitem_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/checkbox_delete"
        android:textStyle="bold"
        tools:text="12 Jun 2049"/>

    <TextView
        android:id="@+id/tv_historyitem_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_historyitem_timestamp"
        app:layout_constraintRight_toLeftOf="@id/checkbox_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="left"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        tools:text="@string/lorem_ipsum"
        />

    <CheckBox
        android:id="@+id/checkbox_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="false"
        />



</android.support.constraint.ConstraintLayout>